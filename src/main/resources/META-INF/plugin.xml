<idea-plugin>
    <id>com.github.ryu1kn.edit_with_shell</id>
    <name>Edit with Shell</name>
    <vendor>ryu1kn</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.github.ryu1kn.edit_with_shell.ExecShellAction"
                class="com.github.ryu1kn.edit_with_shell.ExecShellAction"
                text="Editor Replace Text"
                description="Replaces selected text with 'Replacement'.">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.ryu1kn.edit_with_shell.listeners.MyProjectActivity"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.ryu1kn.edit_with_shell.EditWithShellAction"
                  topic="com.github.ryu1kn.edit_with_shell.FinalSelectionAware" />
        <listener class="com.github.ryu1kn.edit_with_shell.FinaliseSelectionAction"
                  topic="com.github.ryu1kn.edit_with_shell.PreSelectionAware" />
    </projectListeners>
</idea-plugin>
